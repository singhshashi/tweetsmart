{
  "name": "tweetsmart",
  "version": "0.0.1",
  "description": "Tweet smarter by easily numbering all your tweets of a tweetstorm",
  "main": "js/app.js",
  "dependencies": {
    "body-parser": "^1.13.3",
    "cookie-parser": "^1.3.5",
    "express": "^4.13.1",
    "express-session": "^1.11.3",
    "flutter": "0.0.2",
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "multer": "^1.0.3",
    "object-assign": "^1.0.0",
    "react": "^0.12.0",
    "redis": "^0.12.1",
    "request": "^2.59.0",
    "twitter": "^1.2.5"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.3",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "build-demo":"watchify -o js/demobundle.js -v -d js/demoapp.js",
    "build-app":"watchify -o js/bundle.js -v -d js/app.js",
    "start": "npm run build-demo | npm run build-app",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > js/app.min.js",
    "test": "jest"
  },
  "author": "Shashi Singh",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
